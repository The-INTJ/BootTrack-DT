
@{
    ViewBag.Title = "ModulePage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/custom/ModuleStyle.css" rel="stylesheet" type="text/css" />

<h2>ModulePage</h2>

<div class="Container">
    <p style="padding-left:20px;">@Html.ActionLink("Home", "Index", "Index") > [Insert Module Name]</p>

    <h1>[Insert Module Name]</h1>
    <div class="Overview-CheckList">
        <div class="Overview">
            <p class="Overview-P-Bold">Overview</p>
            <hr style="margin-top: 0;" />
            <p class="Overview-P">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
                tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
                quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
                Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
            </p>
            <p class="Overview-P-Bold">Module SMEs</p>
            <hr style="margin-top: 0;" />
            <div class="Module-SMEs">
                @* Generate as many as we get from list; Rn Hardcoded *@
                <div class="SME">
                    <svg height="100" width="100">
                        <circle cx="50" cy="50" r="40" stroke="black" stroke-width="3" fill="grey" />
                    </svg>
                    <p>[Insert SME Name]</p>
                </div>
                <div class="SME">
                    <svg height="100" width="100">
                        <circle cx="50" cy="50" r="40" stroke="black" stroke-width="3" fill="grey" />
                    </svg>
                    <p>[Insert SME Name]</p>
                </div>
                <div class="SME">
                    <svg height="100" width="100">
                        <circle cx="50" cy="50" r="40" stroke="black" stroke-width="3" fill="grey" />
                    </svg>
                    <p>[Insert SME Name]</p>
                </div>
            </div>
        </div>
        <div class="CheckList">
            <p class="CheckList-P-Bold">CheckList</p>
            <hr style="margin-top: 0;" />
            <div class="Exercises">
                <p>Exercise 1<img class="Exercise-Img" id="Unchecked" src="~/Images/square.svg"/></p>
                <p>Exercise 2<img class="Exercise-Img" id="Unchecked" src="~/Images/square.svg" /></p>
                <p>Exercise 3<img class="Exercise-Img" id="Unchecked" src="~/Images/square.svg" /></p>
                <p>Exercise 4<img class="Exercise-Img" id="Unchecked" src="~/Images/square.svg" /></p>
                <p>Ready for Review<img class="Exercise-Img" id="Unchecked" src="~/Images/square.svg"/></p>
            </div>
        </div>
    </div>

    <div class="Module-Dashboard">
        <p class="Module-Dashboard-P-Bold" style="text-align:center;">Module Dashboard</p>
        <hr />
        <div style="display: inline-block; padding-left: 20%; width: 100%;">
            <input type="text" placeholder="Filter by colleague name..." />
            <span style="padding-left: 10%;"><img id="Unchecked" src="~/Images/square.svg"> Hide Completed</span>
            <span style="padding-left: 10%;"><img id="Unchecked" src="~/Images/square.svg"> Under Review</span>
        </div>
        <div class="Dash-Headers">
            <h4>Colleague</h4>
            <h4>Module Status</h4>
            <h4>Completion Date</h4>
        </div>
        <div class="Dash-Camper">
            <div class="Camper" style="display:flex;">
                <svg height="100" width="100">
                    <circle cx="50" cy="50" r="40" stroke="black" stroke-width="3" fill="grey" />
                </svg>
                <p style="padding-top: 14%; padding-left: 3%; ">[Insert Camper Here]</p>
            </div>
            <div class="Progress-Bar-Nonbootstrap" style="padding-top: 2%;">
                <h3>*Progress Filler*</h3>
            </div>
            <h5 style="padding-top: 2%;">[Insert Completion Date]</h5>
        </div>
        <div class="Dash-Camper">
            <div class="Camper" style="display:flex;">
                <svg height="100" width="100">
                    <circle cx="50" cy="50" r="40" stroke="black" stroke-width="3" fill="grey" />
                </svg>
                <p style="padding-top: 14%; padding-left: 3%; ">[Insert Camper Here]</p>
            </div>
            <div class="Progress-Bar-Nonbootstrap" style="padding-top: 2%;">
                <h3>*Progress Filler*</h3>
            </div>
            <h5 style="padding-top: 2%;">[Insert Completion Date]</h5>
        </div>
        <div class="Dash-Camper">
            <div class="Camper" style="display:flex;">
                <svg height="100" width="100">
                    <circle cx="50" cy="50" r="40" stroke="black" stroke-width="3" fill="grey" />
                </svg>
                <p style="padding-top: 14%; padding-left: 3%; ">[Insert Camper Here]</p>
            </div>
            <div class="Progress-Bar-Nonbootstrap" style="padding-top: 2%;">
                <h3>*Progress Filler*</h3>
            </div>
            <h5 style="padding-top: 2%;">[Insert Completion Date]</h5>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("img").click(function () {
            if ($(this).attr("src") === "/Images/square.svg") {
                $(this).attr("id", "Checked");
                $(this).attr("src", "/Images/check-square.svg");
            } else {
                $(this).attr("id", "Unchecked");
                $(this).attr("src", "/Images/square.svg");
            }
        })
    })
</script>
