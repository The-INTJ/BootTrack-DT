@model Boot_Track.Models.Login
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("TryLogin", "Login", FormMethod.Post))
{
    <body>

        <div class="main">
            <p class="sign" align="center">Sign in</p>
            <br/>
            <form class="form1" />
            @Html.TextBoxFor(m => m.Username, new { @id="Username", @class = "un", @type = "text", @align = "center", @placeholder = "Username" })
            <br/>
            <br/>
            @Html.TextBoxFor(m => m.Password, new { @id="Password", @class = "un", @type = "text", @align = "center", @placeholder = "Password" })
            <br/>
            <br/>
            <input class="submit" type="submit" placeholder="Sign In" />
            @*<p class="forgot" align="center"><a href="#">Forgot Password?</a></p>*@
        </div>

    </body>
}

@section Styles {
    <link href="@Url.Content("~/Content/custom/LoginStyle.css")" rel="stylesheet" type="text/css" />
}