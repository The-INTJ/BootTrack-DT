<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    @Styles.Render("~/Content/custom/LoginStyle.css")

</head>
<body>
<div class="img-bar">
    <img class="Logo" src="~/Images/BootTrack-Logo.png" alt="Logo" 
         style="width: 15%; height: 14%;"/>
</div>

<div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Boot Track&trade;</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/custom/script.js"></script>
    @RenderSection("scripts", required: false)
    @RenderSection("styles", required: false)
</body>
</html>
