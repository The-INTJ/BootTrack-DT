<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/custom/dropdowns.js"></script>

</head>
<body>
    <ul class="nav nav-fill navbar-expand-lg navbar-light fixed-top" style="list-style: none; padding-top:30px; padding-bottom:30px; background-color: #C4C4C4;">
        <li class="nav-item">
            <img class="Logo" src="~/Images/BootTrack-Logo.png" alt="Logo" />
        </li>
        <li class="nav-item">
            <a class="Title-Link" href="/Index/Index"><strong>BOOT TRACK</strong></a>
        </li>
        <li class="nav-item">
            <svg height="80px" width="80px">
                <circle cx="40px" cy="40px" r="32px" stroke="black" stroke-width="3" fill="grey" />
            </svg>
            @*<img class="Avatar" src="~/Images/Grey-Circle.PNG" alt="Avatar" />*@
        </li>
    </ul>

    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/custom/script.js"></script>
    @RenderSection("scripts", required: false)
    @RenderSection("styles", required: false)
</body>
</html>
