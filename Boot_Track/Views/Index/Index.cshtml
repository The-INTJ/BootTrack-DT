    @* Script before table bc dropdowns need toggleShow declared *@
    <script>
        function toggleShow(a) {
            a.parentNode.getElementsByClassName('dropdown-content')[0].classList.toggle("show");
        }

        /* Change main selector text to option clicked */
        function changeText(text) {
            console.log(text.parentNode.parentNode.querySelector)
            text.parentNode.parentNode.querySelector('.dropbtn').innerText = text.innerText;
            if (text.innerText === 'In Progress') {
                text.parentNode.parentNode.querySelector('.dropbtn').style.backgroundColor = '#F0E8A0';
            } else if (text.innerText === 'Completed') {
                text.parentNode.parentNode.querySelector('.dropbtn').style.backgroundColor = '#99EAB9';
            } else {
                text.parentNode.parentNode.querySelector('.dropbtn').style.backgroundColor = '#E5E5E5';
            }
        }

        // Close the dropdown menu if the user clicks outside of it
        window.onclick = function (event) {
            console.log("clicked");
            if (!event.target.matches('.dropbtn')) {
                var dropdowns = document.getElementsByClassName("dropdown-content");
                var i;
                for (i = 0; i < dropdowns.length; i++) {
                    var openDropdown = dropdowns[i];
                    if (openDropdown.classList.contains('show')) {
                        openDropdown.classList.remove('show');
                    } 
                }
            }
        }
    </script>

